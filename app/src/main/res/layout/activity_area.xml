<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AreaActivity"
    android:background="#FEF9E7">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="80dp"
        android:padding="10dp"
        android:text="SELECT YOUR AREA "
        android:textColor="#05587E"
        android:textStyle="bold"
        android:textSize="30dp" />

    <Button
        android:id="@+id/area1"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginTop="170dp"
        android:layout_marginLeft="50dp"
        android:text="Kothrud"
        android:textColor="#fff"
        android:textSize="20dp"
        android:background="#05587E"
        />

    <Button
        android:id="@+id/area2"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginTop="170dp"
        android:layout_toRightOf="@+id/area1"
        android:layout_marginLeft="50dp"
        android:background="#05587E"
        android:text="Pashan"
        android:textColor="#fff"
        android:textSize="20dp" />

    <Button
        android:id="@+id/area3"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="50dp"
        android:layout_below="@+id/area1"
        android:text="sahakar Nagar"
        android:textColor="#fff"
        android:textSize="20dp"
        android:background="#05587E"
        />

    <Button
        android:id="@+id/area4"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginTop="40dp"
        android:layout_below="@+id/area2"
        android:layout_toRightOf="@+id/area3"
        android:layout_marginLeft="50dp"
        android:background="#05587E"
        android:text="Shivaji Nagar"
        android:textColor="#fff"
        android:textSize="20dp" />

    <Button
        android:id="@+id/area5"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginTop="500dp"
        android:layout_centerHorizontal="true"
        android:background="#05587E"
        android:text="Sinhagad road"
        android:textColor="#fff"
        android:textSize="20dp" />

</RelativeLayout>